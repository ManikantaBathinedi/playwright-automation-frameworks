# ==========================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==========================================
# Use this for local development and debugging

# Application URL
BASE_URL=https://dev.myapp.com
ENV=dev

# Browser Settings (Show browser for debugging)
# Supported: chrome, firefox, webkit (chrome = chromium engine)
BROWSER=chrome
HEADLESS=false
HEADLESS=false

# Test User Credentials (Dev Test Account)
TEST_USER_EMAIL=testuser@dev.com
TEST_USER_PASSWORD=DevTest@123

# Admin User Credentials
ADMIN_EMAIL=admin@dev.com
ADMIN_PASSWORD=DevAdmin@123

# API Settings (Dev API Server)
API_BASE_URL=https://api-dev.myapp.com
API_TIMEOUT=30000

# Database Settings (Local Dev Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myapp_dev
DB_USER=dev_user
DB_PASSWORD=dev_password

# Timeouts (More generous for debugging)
DEFAULT_TIMEOUT=60000
NAVIGATION_TIMEOUT=60000
ACTION_TIMEOUT=15000

# Reporting
REPORT_DIR=reports

# CI/CD Settings
CI=false

# Retry Settings (Less retries for faster feedback)
MAX_RETRIES=1

# Parallel Execution (Fewer workers for easier debugging)
WORKERS=2
