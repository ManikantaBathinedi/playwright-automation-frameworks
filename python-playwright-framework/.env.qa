# ==========================================
# QA ENVIRONMENT CONFIGURATION
# ==========================================
# Use this for QA testing before production

# Application URL
BASE_URL=https://qa.myapp.com
ENV=qa

# Browser Settings (Headless for faster execution)
# Supported: chrome, firefox, webkit (chrome = chromium engine)
BROWSER=chrome
HEADLESS=true

# Test User Credentials (QA Test Account)
TEST_USER_EMAIL=testuser@qa.com
TEST_USER_PASSWORD=QaTest@123

# Admin User Credentials
ADMIN_EMAIL=admin@qa.com
ADMIN_PASSWORD=QaAdmin@123

# API Settings (QA API Server)
API_BASE_URL=https://api-qa.myapp.com
API_TIMEOUT=30000

# Database Settings (QA Database Server)
DB_HOST=qa-db.myapp.com
DB_PORT=5432
DB_NAME=myapp_qa
DB_USER=qa_user
DB_PASSWORD=qa_password

# Timeouts (Standard timeouts)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
ACTION_TIMEOUT=10000

# Reporting
REPORT_DIR=reports

# CI/CD Settings
CI=false

# Retry Settings (More retries for stability)
MAX_RETRIES=2

# Parallel Execution (More workers for faster execution)
WORKERS=4
