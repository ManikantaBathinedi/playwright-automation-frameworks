# ==========================================
# STAGING ENVIRONMENT CONFIGURATION
# ==========================================
# Use this for pre-production testing (production-like)

# Application URL
BASE_URL=https://staging.myapp.com
ENV=staging

# Browser Settings
# Supported: chrome, firefox, webkit (chrome = chromium engine)
BROWSER=chrome
HEADLESS=true (Headless)
HEADLESS=true

# Test User Credentials (Staging Test Account)
TEST_USER_EMAIL=testuser@staging.com
TEST_USER_PASSWORD=StagingTest@123

# Admin User Credentials
ADMIN_EMAIL=admin@staging.com
ADMIN_PASSWORD=StagingAdmin@123

# API Settings (Staging API Server - mirrors production)
API_BASE_URL=https://api-staging.myapp.com
API_TIMEOUT=30000

# Database Settings (Staging Database - mirrors production)
DB_HOST=staging-db.myapp.com
DB_PORT=5432
DB_NAME=myapp_staging
DB_USER=staging_user
DB_PASSWORD=staging_password

# Timeouts (Production-like timeouts)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
ACTION_TIMEOUT=10000

# Reporting
REPORT_DIR=reports

# CI/CD Settings
CI=false

# Retry Settings (Production-like)
MAX_RETRIES=2

# Parallel Execution (Production-like)
WORKERS=6
