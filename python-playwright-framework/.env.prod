# ==========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==========================================
# Use this for smoke tests and monitoring in production
# ⚠️ USE WITH CAUTION - THIS IS LIVE PRODUCTION!

# Application URL
BASE_URL=https://www.myapp.com
ENV=prod

# Browser Settings
# Supported: chrome, firefox, webkit (chrome = chromium engine)
BROWSER=chrome
HEADLESS=true (Always headless in production)
HEADLESS=true

# Test User Credentials (Production Read-Only Test Account)
TEST_USER_EMAIL=readonly@myapp.com
TEST_USER_PASSWORD=ProdTest@123

# Admin User Credentials (Use with extreme caution!)
ADMIN_EMAIL=admin@myapp.com
ADMIN_PASSWORD=ProdAdmin@123

# API Settings (Production API)
API_BASE_URL=https://api.myapp.com
API_TIMEOUT=30000

# Database Settings (Production Database - Read-only access)
DB_HOST=prod-db.myapp.com
DB_PORT=5432
DB_NAME=myapp_prod
DB_USER=readonly_user
DB_PASSWORD=readonly_password

# Timeouts (Strict production timeouts)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
ACTION_TIMEOUT=10000

# Reporting
REPORT_DIR=reports

# CI/CD Settings
CI=true

# Retry Settings (No retries - fail fast)
MAX_RETRIES=0

# Parallel Execution (Conservative to avoid load)
WORKERS=2
